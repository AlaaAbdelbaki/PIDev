{% extends 'admin_base.html.twig' %}
{% block admin_content %}
    <!DOCTYPE html>
    <html>
    <head>
        <title> tickets list </title>
    </head>
    <body>
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title ">tickets list</h4>
                <p class="card-category"> events :p </p>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead class=" text-primary">
                        <th>ID</th>
                        <th>price</th>
                        <th>event_id</th>

                        </thead>
                        <tbody>
                        {% for t in t %}
                            <tr>
                                <td>{{ t.id }}</td>
                                <td>{{ t.price }}</td>
                                <td>{{ t.event.title}}</td>

                               <td><a href="{{path('supp',{'id': t.id })}}"> <button class="btn btn-primary btn-block">delete</button></a> <br></td>
                                <td><a href="{{path('edit',{'id': t.id })}}"> <button class="btn btn-primary btn-block">edit</button></a> <br></td>

                            </tr>

                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    </body>
    </html>
{% endblock %}