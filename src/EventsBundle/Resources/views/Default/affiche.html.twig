{% extends 'base.html.twig' %}
{% block content %}

   <footer class="footer-area section-padding-100-6">
       <div class="container-fluid">
           <div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title ">Events list</h4>
                <p class="card-category"> </p>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead class=" text-primary">
                        <th>Image</th>
                        <th>title</th>
                        <th>start_date</th>
                        <th>end_date</th>
                        <th>location</th>
                        <th>nbr_places</th>
                        <th>description</th>
                        <th>type</th>

                        </thead>
                        <tbody>
                        {% for i in t %}
                            <tr>
                                <td><img src="{{ asset('assets/img/shop-img/' ~ i.img) }}" height="50px" width="50px"></td>
                                <td>{{ i.title }}</td>
                                <td>{{ i.startDate|date("d/m/Y")}}</td>
                                <td>{{ i.endDate|date("d/m/Y") }}</td>
                                <td>{{ i.location}}</td>
                                <td>{{ i.nbPlaces }}</td>
                                <td>{{ i.description}}</td>
                                <td>{{ i.type}}</td>



                            </tr>

                        {% endfor %}
                        </tbody>
                    </table>


                    <h2>Search an event !!</h2>
                    <div class="sidebar-search">
                        <div class="input-group custom-search-form">
                            <input type="text" id="search" class="form-control" placeholder="Search here">
                        </div>
                        <!-- /input-group -->
                    </div>
                    <ul class="nav" id="side-menu">
                        <li>
                            <ul class="nav nav-second-level" id="entitiesNav">
                            </ul>
                        </li>
                    </ul><br><br><br><br>

                    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
                    <script type="text/javascript">
                        jQuery(document).ready(function() {
                            var searchRequest = null;
                            $("#search").keyup(function() {
                                var minlength = 1;
                                var that = this;
                                var value = $(this).val();
                                var entitySelector = $("#entitiesNav").html('');
                                if (value.length >= minlength ) {
                                    if (searchRequest != null)
                                        searchRequest.abort();
                                    searchRequest = $.ajax({
                                        type: "GET",
                                        url: "{{ path('search') }}",
                                        data: {
                                            'q' : value
                                        },
                                        dataType: "text",
                                        success: function(msg){
                                            //we need to check if the value is the same
                                            if (value===$(that).val()) {
                                                var result = JSON.parse(msg);
                                                $.each(result, function(key, arr) {
                                                    $.each(arr, function(id, value) {
                                                        if (key === 'event') {
                                                            if (id !== 'error') {
                                                                console.log(value[1]);
                                                                entitySelector.append('<li><b>'+value[1]+'</b><a href="/show_events/'+id+'">'+'<img src="/web/assets/img/album/'+value[0]+'" style="width: 50px; height: 50px"/>'+'</a></li>');
                                                            } else {
                                                                entitySelector.append('<li class="errorLi">'+value+'</li>');
                                                            }
                                                        }
                                                    });
                                                });
                                            }
                                        },
                                    });
                                }
                            });
                        });
                    </script>

                </div>
            </div>
        </div>
    </div>
           </div>
       </div>
   </footer>
   </div>


{% endblock %}