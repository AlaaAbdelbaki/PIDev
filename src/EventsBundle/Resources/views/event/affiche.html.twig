{% extends 'admin_base.html.twig' %}
{% block admin_content %}

    <div class="content">
    <div class="container-fluid">

<div class="col-md-12">
    <div class="card">
        <div class="card-header card-header-primary">
            <h4 class="card-title ">Events list</h4>
            <p class="card-category"> </p>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead class=" text-primary">
                    <th>ID</th>
                    <th>title</th>
                    <th>start_date</th>
                    <th>end_date</th>
                    <th>location</th>
                    <th>nbr_places</th>
                    <th>description</th>
                    <th>type</th>
                    <th>img</th>
                    </thead>
                    <tbody>
                    {% for i in t %}
                        <tr>
                            <td>{{ i.id }}</td>
                            <td>{{ i.title }}</td>
                            <td>{{ i.startDate|date("d/m/Y")}}</td>
                            <td>{{ i.endDate|date("d/m/Y") }}</td>
                            <td>{{ i.location}}</td>
                            <td>{{ i.nbPlaces }}</td>
                            <td>{{ i.description}}</td>
                            <td>{{ i.type}}</td>
                            <td><img src="{{ asset('assets/img/shop-img/' ~ i.img) }}" height="50px" width="50px"></td>
                            <td><a  class="btn btn-danger mr-3" href="{{path('event_delete',{'id': i.id })}}"> <button class="btn btn-primary btn-block">delete</button></a> <br></td>
                            <td><a class="btn btn-warning" href="{{path('event_modifier',{'id': i.id })}}"> <button class="btn btn-primary btn-block">edit</button></a> <br></td>

                        </tr>

                    {% endfor %}
                    </tbody>
                </table>

            </div>

        </div>

    </div>
    <a href="{{path('event_add')}}"> <button class=" btn btn-primary btn-block">Add New Event</button></a> <br>
    <a href="{{path('statsUser')}}"> <button class=" btn btn-primary btn-block">show event distribution </button></a> <br>
</div>
    </div>
    </div>

{% endblock %}