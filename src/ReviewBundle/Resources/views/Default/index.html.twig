{% extends 'admin_base.html.twig' %}
{% block admin_content %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/starrating/css/rating.css') }}" />
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
    <script src="{{ asset('bundles/starrating/js/rating.js') }}"></script>
    <div class="content">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title text-center ">Rating</h4>
                <p class="card-category"> </p>
                <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for category.." title="Type in Rating">
            </div>
            <div class="card-body">
                <p><button onclick="sortTable()">Sort</button></p>
                <div class="table-responsive">
                    <table class="table"  id="myTable" >
                        <thead class="text-primary">
                        <th>Rating</th>
                        <th>User Name</th>
                        <th>Category</th>
                        <th >Title </th>
                        <th>Content</th>
                        <th>Actions</th>

                        </thead>

                        <tbody>
                        {% set sum = 0 %}
                        {% set i = 0 %}
                        {% for s in formulaire %}

                        <tr>
                            <td>  {{ s.rating| rating(5) }}</td>
                            <td>{{ s.User.username }}</td>
                            <td>{{ s.category }}</td>
                            <td>{{ s.title }}</td>
                            <td>{{ s.content }}</td>

                            <td><a class="btn btn-danger" href="{{ path('review_delete',{'id':s.id}) }}">Delete</a></td>
                        </tr>
                            {% set sum = sum + s.rating %}
                            {% set i = i+1 %}
                        {% endfor %}
                        {% set sum = sum/i %}

                        </tbody>
                    </table>

                    <div class="card-header card-header-success text-center mt-3" ><h2 class="text-center text-white"> Average</h2>{{ sum | rating(5) }} </div>
                </div></div></div></div></div>

{% endblock %}
