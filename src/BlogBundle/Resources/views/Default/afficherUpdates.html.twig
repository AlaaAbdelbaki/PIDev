{%  extends 'admin_base.html.twig' %}
{% block admin_content %}
    <div class="content">
    <div class="container-fluid">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">

                <h2 class="card-title text-center">Updates</h2>
                <a class="btn btn-success mt-3" href="{{ path('updates_ajouter') }}">Publish News</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead class=" text-primary">

                        <th>
                            Title
                        </th>
                        <th>
                            Image
                        </th>
                        <th>
                            Content
                        </th>
                        <th>
                            categorie
                        </th>
                        <th>
                            Publish_date
                        </th>
                        <th>
                            Action
                        </th>

                        </thead>
                        <tbody>
                        {% for a in updatess %}
                            <tr>

                                <td>
                                    {{a.title}}
                                </td>
                                <td>
                                    <img src="{{ asset('assets/img/shop-img/' ~ a.img) }}" width="200px" height="300px"/>
                                </td>
                                <td>
                                    {{a.content}}
                                </td>
                                <td>
                                    {{a.category}}
                                </td>
                                <td>
                                    {{a.publishDate|date("Y/m/d")}}
                                </td>


                                <td>
                                    <a class="btn btn-danger mt-3" href="{{ path('supprimer',{'id':a.id}) }}">Supprimer</a>
                                    <a class="btn btn-warning mt-3" href="{{ path('modifier',{'id':a.id}) }}">Modifier</a>
                                </td>

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    </div></div>
{% endblock %}