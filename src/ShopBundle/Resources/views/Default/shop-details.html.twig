{% extends 'base.html.twig' %}
{% block content %}
    <div class="breadcumb-area bg-img bg-overlay2" style="background-image: url(img/bg-img/breadcumb.jpg);">
        <div class="bradcumbContent">
            <h2>Shop Details</h2>
        </div>
    </div>
    <!-- bg gradients -->
    <div class="bg-gradients"></div>
    <!-- ##### Breadcumb Area End ##### -->

    <!-- details area Start ##### -->
    <div class="products-details section-padding before-after bg-white">
        <div class="products-content">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="products-slider">
                            <div class="products-image">
                                <img  class="img-fluid" src="{{ asset('assets/img/shop-img/' ~ product.img) }}" alt="Image">
                            </div>

                        </div>
                    </div>
                    <div class="col-md-6">
                        <h1>Stock: <span>Only {{ product.stock }} Left</span></h1>
                        <h2>{{product.productName}}</h2>
                        <h3>${{ product.price }}</h3>

                        <form class="cart" method="post">
                            <div class="color">
                                <h3>Color</h3>
                                <input type="radio" name="sellType" value="color1" id="color1"><label for="color1"></label>
                                <input type="radio" name="sellType" value="color2" id="color2"><label for="color2"></label>
                                <input type="radio" name="sellType" value="color3" id="color3"><label for="color3"></label>
                                <input type="radio" name="sellType" value="color4" id="color4"><label for="color4"></label>
                                <input type="radio" name="sellType" value="color5" id="color5"><label for="color5"></label>
                            </div>
                            <div class="quantity" data-trigger="spinner">
                                <h3>Quantity:</h3>
                                <input type="text" name="quantity" value="1" title="quantity" class="input-text">
                                <a class="btn btn-default" href="javascript:;" data-spin="up"><i class="fa fa-angle-up"></i></a>
                                <a class="btn btn-default" href="javascript:;" data-spin="down"><i class="fa fa-angle-down"></i></a>
                            </div>
                            <div class="add-buttons">
                                <button type="submit" class="cart-button button"><i class="fa fa-shopping-cart"></i>Add to cart</button>

                            </div>
                        </form>

                    </div>
                </div><!-- row -->
            </div><!-- container -->
        </div><!-- products content -->
    </div><!-- products details -->


    <!-- details area End ##### -->
{% endblock %}